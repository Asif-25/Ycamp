<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3 shadow-sm p-3 bg-white rounded">
                <img src="<%= campground.image %>" class="card-img-top" alt="">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <h2 class="card-title"><%= campground.title %></h2>
                            <h4 class="text-muted"><%= campground.location %></h4>
                        </li>
                        <li class="list-group-item">
                            <h5 class=""><i>Submitted by: <%= campground.author.username %></i></h5>
                        </li>
                        <li class="list-group-item">
                            <p class="card-text"><%= campground.description%></p>
                        </li>
                        <li class="list-group-item">
                            <h5>Price: <b>$ <%= campground.price%></b></h5>
                        </li>
                        <p class="card-text">
                            <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <% if(currentUser && campground.author.equals(currentUser._id)){ %>
                            <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                            <button class="btn btn-danger">Delete</button>
                            <% } %>
                        </form>
                    </p>
                </ul>
                <a href="/campgrounds" class="btn btn-outline-primary">All Campgrounds</a>
            </div>
        </div>
    </div>
    <div class="card mb-3 col-6 shadow-sm p-3 bg-white rounded">
            <% if(currentUser){ %>
            <h2>Leave a Review</h2>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="post" class="mb-3 needs-validation" novalidate>
                <div class="mb-3 shadow-none p-3 bg-light rounded">
                    <label for="" class="form-label">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" required>
                    <label class="form-label" for="body">Review</label> 
                    <textarea class="form-control mb-3" name="review[body]" id="card-body" cols="30" rows="10" required></textarea>
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
            <% } %>
            <% for(let review of campground.reviews){ %>
                <div class="mb-3 shadow-none p-3 bg-light rounded">
                    <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <h5 class="card-subtitle mb-2 text-muted">By: <%= review.author.username %></h5>
                    <p class="card-text"></p>Review: <%= review.body %></p>
                    <% if(currentUser && review.author.equals(currentUser._id)){ %>
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                    <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% } %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>