<% layout('layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Add Campground</a>
<ul>
    <% for (let campground of campgrounds){ %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length){ %>
                    <img class="img-fluid" src="<%= campground.images[0].url %> " alt="" />
                    <% }else{ %>
                    <img
                        class="img-fluid"
                        src="https://res.cloudinary.com/dzg1kwec3/image/upload/v1680630420/YCAMP/v3kfa9seb3aqtg2hzxhf.jpg"
                        alt=""
                    />
                    <% } %>
                </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= campground.title%></h5>
                <p class="card-text"><%= campground.description%></p>
                <p class="card-text"><small><%= campground.location %></small></p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
              </div>
            </div>
        </div>
        </div>
    <% } %>
</ul>